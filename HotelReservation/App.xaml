<Application x:Class="HotelReservation.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HotelReservation"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
            <Style TargetType="TextBox" x:Key="TexBoxStyle">
                <Setter Property="Margin" Value="3"/>
            </Style>
        <Style TargetType="DatePicker" x:Key="DatePickerStyle">
            <Setter Property="FirstDayOfWeek" Value="Monday"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style TargetType="ComboBox" x:Key="ComboBoxStyle">
            <Setter Property="Margin" Value="3"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </Application.Resources>
</Application>
